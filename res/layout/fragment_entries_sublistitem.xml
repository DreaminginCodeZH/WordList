<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/EntryListItem" >

    <TextView
        android:id="@+id/fragment_entries_subListItem_relation"
        style="@style/EntryListItemRelation" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/fragment_entries_subListItem_word"
            style="@style/EntryListItemWord" />

        <TextView
            android:id="@+id/fragment_entries_subListItem_definition"
            style="@style/EntryListItemDefinition" />
    </LinearLayout>

    <ImageView
        android:id="@+id/fragment_entries_subListItem_indicator"
        style="@style/EntryListItemIndicator" />

</LinearLayout>