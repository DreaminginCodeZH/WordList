<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/EntryListItem" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/fragment_entries_listItem_word"
            style="@style/EntryListItemWord" />

        <TextView
            android:id="@+id/fragment_entries_listItem_definition"
            style="@style/EntryListItemDefinition" />
    </LinearLayout>

    <ImageView
        android:id="@+id/fragment_entries_listItem_indicator"
        style="@style/EntryListItemIndicator" />

</LinearLayout>